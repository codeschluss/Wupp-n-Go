{
  "$schema": "node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "projects": {
    "client": {
      "prefix": "",
      "projectType": "application",
      "root": "",
      "sourceRoot": "src",
      "schematics": {},
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "aot": true,
            "deleteOutputPath": false,
            "extractCss": true,
            "extractLicenses": false,
            "main": "src/client.ts",
            "namedChunks": false,
            "ngswConfigPath": "service.json",
            "index": "src/core/entrypoint.html",
            "polyfills": "src/core/polyfills.ts",
            "outputHashing": "none",
            "outputPath": "../backend/webroot",
            "serviceWorker": true,
            "tsConfig": "tsconfig.json",
            "vendorChunk": true,
            "assets": [
              {
                "glob": "manifest.json",
                "input": "",
                "output": "/"
              },
              {
                "glob": "deeppurple-amber.css",
                "input": "node_modules/@angular/material/prebuilt-themes",
                "output": "/css"
              },
              {
                "glob": "*.xlf",
                "input": "i18n",
                "output": "/i18n"
              },
              {
                "glob": "**/*",
                "input": "imgs",
                "output": "/imgs"
              }
            ]
          },
          "configurations": {
            "production": {
              "buildOptimizer": true,
              "optimization": true,
              "sourceMap": false
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "client:build"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "client"
}
