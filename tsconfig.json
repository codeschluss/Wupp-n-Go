{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2018"],
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@portal": ["target/@portal"],
      "@portal/*": ["target/@portal/*"]
    }
  },
  "compileOnSave": false
}
