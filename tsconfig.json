{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "target",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es6",
      "es2015.iterable",
      "es2018",
      "esnext"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@wooportal/*": [
        "target/@wooportal/*"
      ]
    }
  },
  "exclude": [
    "**/*.android.ts",
    "**/*.ios.ts",
    "**/*.tns.ts"
  ]
}
